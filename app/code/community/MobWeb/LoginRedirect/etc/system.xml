<?xml version="1.0"?>
<config>
	<sections>
		<customer>
			<groups>
				<login_redirect_target module="loginredirect">
					<label>Login Redirect Target</label>
					<expanded>1</expanded>
					<sort_order>999</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>0</show_in_website>
					<show_in_store>0</show_in_store>
					<fields>
						<!-- Access this field via: Mage::getStoreConfig('customer/login_redirect_target/target') -->
						<target>
							<label>Redirect Target</label>
							<frontend_type>text</frontend_type>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment><![CDATA[
							Enter an URL where the customer should be redirected to after logging in. You may enter a relative URL like "some-cms-page". Leave this field blank and the user will be redirected to your shop's frontpage.
							]]></comment>
							<sort_order>999</sort_order>
						</target>
					</fields>
				</login_redirect_target>
			</groups>
		</customer>
	</sections>
</config>